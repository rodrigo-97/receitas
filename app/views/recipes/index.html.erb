<div class="row d-flex justify-content-center px-4 pd-md-0">
	<div class="col-12 col-md-6 p-md-0">
		<h1>Receitas</h1>
		<div class="w-100 d-flex justify-content-end">
			<p>
				<%= link_to "Nova receita" , new_recipe_path, class:"btn btn-primary" %>
			</p>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-responsive table-bordered">
				<thead>
					<tr>
						<th><b>Nome</b></th>
						<th><b>Ingredientes</b></th>
						<th><b>Calorias</b></th>
						<th><b>Modo de preparo</b></th>
						<th><b>Custo</b></th>
						<th><b>Tipo</b></th>
						<th><b>Porções</b></th>
						<th><b>Tempo de preparo</b></th>
						<td colspan="3"><b>Ações</b></th>
						</tr>
					</thead>
					<tbody>
						<% @recipes.each do |recipe| %>
						<tr>
							<td>
								<%= recipe.name %>
							</th>
							<td>
								<%= recipe.stuff %>
							</th>
							<td>
								<%= recipe.calories %>
							</th>
							<td>
								<%= recipe.prepare_mode %>
							</th>
							<td>
								<%= recipe.cost %>
							</th>
							<td>
								<%= recipe.kind %>
							</th>
							<td>
								<%= recipe.portion %>
							</th>
							<td>
								<%= recipe.duration.to_formatted_s(:time) %> min
							</th>
							<td>
								<%= link_to "Visualizar" , recipe, class: "btn btn-sm btn-primary" %>
							</th>
							<td>
								<%= link_to "Editar" , edit_recipe_path(recipe), class: "btn btn-sm btn-secondary" %>
							</th>
							<td>
								<%= link_to "Remover" , recipe_path(recipe), class: "btn btn-sm btn-danger", method: :delete, data:{confirm: "Deseja deletar esta receita?"} %>
							</th>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
