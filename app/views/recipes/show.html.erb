<div class="row d-flex justify-content-center m-0">
	<div class="col-12 col-md-6 my-3">
		<h1>
			<%= @recipe.name %>
		</h1>

		<div class="mt-3">
			<p class="h4">Ingredientes</p>
			<%= @recipe.stuff %>
		</div>

		<div class="mt-3">
			<p class="h4">Calorias</p>
			<%= @recipe.calories %>
		</div>

		<div class="mt-3">
			<p class="h4">Modo de preparo</p>
			<%= @recipe.prepare_mode %>
		</div>

		<div class="mt-3">
			<p class="h4">Custo</p>
			<%= number_to_currency(@recipe.cost) %>
		</div>

		<div class="mt-3">
			<p class="h4">Tipo</p>
			<%= @recipe.kind %>
		</div>

		<div class="mt-3">
			<p class="h4">Porções</p>
			<%= @recipe.portion %>
		</div>

		<div class="mt-3">
			<p class="h4">Tempo de preparo</p>
			<%= @recipe.duration.strftime("%H:%M") %>
		</div>

		<div class="mt-3">
			<p class="h4">Imagem</p>
			<%= has_image(@recipe) %>
		</div>

		<%= link_to "Voltar" , recipes_path, class:"btn btn-primary my-3" %>
		<%= link_to "Adicionar novo comentário" , new_recipe_comment_path(@recipe), class:"btn btn-secondary my-3" %>
	</div>
</div>
